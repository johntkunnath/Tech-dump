'''
Milage of car using functions from Bang to Goa
'''

def Mileage():
    distance = end_value - start_value
    mileage = distance / fuel_consumed
    No_of_stops = 560 / (capacity * mileage)
    print ("Mileage is : " , round(mileage), "km/ltrs")
    print ("No of stops on the way to goa : " , round(No_of_stops))

#main starts here
start_value = int(input("Enter start value : " ))
end_value = int(input("Enter end value : " ))
fuel_consumed = int(input("Enter the fuel consumed in litres : "))
capacity = int(input("Enter the fuel capacity of the car : " ))
Mileage()
