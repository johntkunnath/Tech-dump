'''
Number Check with functions
'''
def perform_check(number):
    if (number<100) & (number>9):
        print ( number , "is a 2 digit number" )
    elif (number>99) & (number<1000):
        print ( number , "is a 3 digit number" )
    else :
        print ( number )
def get_number():
    num = int(input("Enter number for check : "))
    return num
#main starts from here 
num1 = get_number()
num2 = get_number()
perform_check(num1)
perform_check(num2)
